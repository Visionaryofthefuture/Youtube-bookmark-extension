{
  "manifest_version": 3,
  "name": "YouTube Timestamp Bookmarker",
  "version": "1.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_title": "YT Bookmarker"
  }
}
